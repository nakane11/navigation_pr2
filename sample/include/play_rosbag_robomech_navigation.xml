<launch>
  <param name="/use_sim_time" value="true" />
  <param name="robot_description" command="$(find xacro)/xacro '$(find pr2_description)/robots/pr2.urdf.xacro'"/>
  
  <node name="rosbag_play"
        pkg="rosbag" type="play"
        args="$(find navigation_pr2)/sample/data/robomech_navigation.bag --clock --loop">
  </node>
 
  <group ns="/kinect_head/rgb/throttled">
    <node name="republish"
          pkg="image_transport" type="republish"
          args="compressed raw">
      <remap from="in" to="image_rect_color" />
      <remap from="out" to="image_rect_color" />
    </node>
  </group>

  <group ns="/kinect_head/depth_registered/throttled">
    <node name="republish"
          pkg="image_transport" type="republish"
          args="compressedDepth raw">
      <remap from="in" to="image_rect" />
      <remap from="out" to="image_rect" />
    </node>
  </group>

</launch>
